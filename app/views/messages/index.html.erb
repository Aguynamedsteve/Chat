
<div class="jumbotron">
  <h3>Chat</h3>
    <table>
      <tbody>
        <%= sync partial: 'message', collection: @messages %>
        <%= sync_new partial: 'message', resource: Message.new %>
      </tbody>
    </table>
    
    <hr>
    <% if policy(@message).create? %>
      <%= form_for @new_message, remote: true do |f| %>
        <%= f.label :content %>
        <%= f.text_field :content %>
      
        <%= f.submit "Send" %>
      <% end %>
    <% end %>
</div>


